<h2>Lista de postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success mb-3">Nova postagem</button></a>

{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{titulo}}</h4>
        <p>Descrição: {{descricao}}</p>
        <small>Data: {{data}}</small>
        <br>
        <small>Categoria: {{categoria.nome}}</small>
        <div class="d-flex justify-content-end">
            <a href="/admin/postagens/edit/{{_id}}" class="btn btn-primary btn-sm">
                <i class="fa-solid fa-pen-to-square"></i>
            </a>
            <form action="/admin/postagem/deletar/" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button href="" class="btn btn-danger btn-sm">
                    <i class="fa-solid fa-trash"></i>
                </button>
            </form>
        </div>
    </div>
</div>
{{else}}
<h4 class="mt-3">Nenhuma postagem registrada!</h4>
{{/each}}